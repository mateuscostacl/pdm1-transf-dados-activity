<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultadoActivity">

    <TextView
        android:id="@+id/tv_nome"
        android:textSize="20sp"
        android:layout_margin="20sp"
        android:text="Aqui vai o nome"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <Button
        android:id="@+id/bt_toast"
        android:text="Mensagem Toast"
        android:onClick="mostrarMensagemToast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

    <Button
        android:id="@+id/bt_alertdialog"
        android:text="Mensagem AlertDialog"
        android:onClick="mostrarMensagemAlertDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Button>

</LinearLayout>